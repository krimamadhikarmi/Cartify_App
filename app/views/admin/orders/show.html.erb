<div class="max-w-lg mx-auto mt-8 bg-gray-200 rounded-lg shadow-md overflow-hidden">
  <div class="px-6 py-4">
    <p class="text-green-500"><%= notice %></p>

    <%= render @admin_order %>

    <div class="mt-4 flex justify-between items-center">
      <%= link_to "Edit this order", edit_admin_order_path(@admin_order), class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-md mr-2" %>
      <%= link_to "Back to orders", admin_orders_path, class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-md mr-2" %>
      <%= button_to "Destroy this order", admin_order_path(@admin_order), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded-md mr-2" %>
    </div>
  </div>
</div>
