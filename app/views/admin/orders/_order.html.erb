<div id="<%= dom_id order %>">
  <p>
    <strong>Customer email:</strong>
    <%= order.customer_email %>
  </p>

  <p>
    <strong>Fullfilled:</strong>
    <%= order.fulfilled %>
  </p>

  <p>
    <strong>Total:</strong>
    <%= order.total %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= order.address %>
  </p>
  
    <% if order.order_products.any?%>
    <strong>Product:</strong>
      <%order.order_products.each do |orderproduct|%>
        Name:<%=orderproduct.product.name %><br/>
        Size:<%=orderproduct.size %><br/>
        Quantity:<%=orderproduct.quantity %>
      <%end%>
    <%end%>


  <% if action_name != "show" %>
    <%= link_to "Show this order", [:admin, order], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

