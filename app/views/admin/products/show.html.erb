<div class="container mx-auto">
  <div class="my-8">
    <p class="text-green-600"><%= notice %></p>
  </div>

  <div class="bg-white shadow-md rounded-md p-6 mb-8">
    <%= render @admin_product %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <%= link_to "Edit this product", edit_admin_product_path(@admin_product), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to products", admin_products_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

    <%= button_to "Destroy this product", admin_product_path(@admin_product), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
