<div class="container mx-auto max-w-screen-md">
    <h1 class="text-4xl font-semibold text-center text-gray-800 mt-24 font-pacifico">Category</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8 px-2">
      <% @main_categories.each do |category| %>
        <div class="category-card p-2 shadow-lg rounded-md transition duration-300 transform hover:scale-105">
          <%= link_to category_path(category) do %>
            <div class="aspect-w-1 aspect-h-1 mb-2">
              <%= category.image.present? ? image_tag(category.image, class: "object-cover w-full h-full rounded-md") : image_tag("http://via.placeholder.com/512", class: "object-cover w-full h-full rounded-md") %>
            </div>
            <p class="text-md font-semibold text-center text-gray-800 truncate"><%= category.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>